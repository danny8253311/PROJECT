@model IEnumerable<WebSiteTest.Areas.ProductsManager.Models.ViewModel.OrderViewModel>
<h1>訂單明細</h1>

<table id="example" class="table nowrap table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductUnitPrice)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelitem => item.ProductId)
                </th>
                <th>
                    @Html.DisplayFor(modelitem => item.ProductName)
                </th>
                <th>
                    @Html.DisplayFor(modelitem => item.ProductCategory)
                </th>
                <th>
                    @Html.DisplayFor(modelitem => item.ProductQty)
                </th>
                <th>
                    @Html.DisplayFor(modelitem => item.ProductUnitPrice)
                </th>
            </tr>
        }
    </tbody>
</table>
